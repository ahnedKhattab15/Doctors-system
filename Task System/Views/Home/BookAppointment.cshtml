@model IEnumerable<Project_Task.Models.Doctor>
@{
    ViewData["Title"] = "Book Appointment";
    var doctors = Model ?? Enumerable.Empty<Project_Task.Models.Doctor>();
    string currentSearch = Context.Request.Query["search"];
}
<h1>Book Appointment</h1>
<form method="get" asp-action="BookAppointment" asp-controller="Home" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search Doctor Name" value="@currentSearch" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="row mt-3">
    @if (!doctors.Any())
    {
        <div class="col-12">
            <p class="text-muted">Not Docrot</p>
        </div>
    }
    else
    {
        @foreach (var item in doctors)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img" src="~/images/@item.Img" style="width: 100%; height: auto;" alt="Doctor Image" />

                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@item?.Name</h5>
                        <p class="card-text">Specialization: @item?.Specialization</p>
                        <div class="mt-auto">
                            <a href="@Url.Action("CompleteAppointment", "Home", new { id = item.DoctorId })" class="btn btn-primary">Book Appointment</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div> 